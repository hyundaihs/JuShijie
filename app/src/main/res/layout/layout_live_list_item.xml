<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                <ImageView
                        android:id="@+id/livePhoto"
                        android:contentDescription="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_11"/>

                <TextView
                        android:id="@+id/liveStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_8_rect_corner"
                        android:textColor="@color/white"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_margin="10dp"
                        android:textSize="12sp"
                        android:text="直播中"
                        />

                <TextView
                        android:id="@+id/liveCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:drawableStart="@mipmap/icon_live_gs"
                        android:drawablePadding="5dp"
                        android:textColor="@color/white"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:paddingBottom="5dp"
                        android:textSize="12sp"
                        android:text="东鹏陶瓷"/>

                <TextView
                        android:id="@+id/liveHot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:drawableStart="@mipmap/icon_live_hot"
                        android:drawablePadding="5dp"
                        android:textColor="@color/white"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="1.25w"/>
            </RelativeLayout>

            <TextView
                    android:id="@+id/liveTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="装修是全包好还是版本哈"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
