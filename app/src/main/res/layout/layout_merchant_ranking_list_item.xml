<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

    <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

    <TextView
            android:id="@+id/rankingNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_round_orange"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:padding="5dp"
            android:text="01"
            app:layout_constraintBottom_toBottomOf="@+id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <ImageView
            android:id="@+id/photo"
            android:contentDescription="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/guideline"
            app:layout_constraintLeft_toRightOf="@+id/rankingNum"/>

    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/photo"
            app:layout_constraintTop_toTopOf="@+id/photo"
            android:text="东鹏特饮"
            android:layout_marginStart="15dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>

    <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="@+id/photo"
            android:textSize="14sp"
            android:textColor="@color/color_606060"
            android:text="辅导教师冷风机打扫了"/>

    <TextView
            android:id="@+id/fsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/photo"
            app:layout_constraintRight_toLeftOf="@+id/gzNum"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            android:text="粉丝数"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/color_D6D6D6"/>

    <TextView
            android:id="@+id/gzNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/fsNum"
            app:layout_constraintRight_toLeftOf="@+id/hzNum"
            app:layout_constraintBottom_toBottomOf="@+id/fsNum"
            android:text="关注数"
            android:textSize="12sp"
            android:textColor="@color/color_D6D6D6"/>

    <TextView
            android:id="@+id/hzNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/gzNum"
            app:layout_constraintRight_toLeftOf="@+id/ftNum"
            app:layout_constraintBottom_toBottomOf="@+id/fsNum"
            android:text="获赞数"
            android:textSize="12sp"
            android:textColor="@color/color_D6D6D6"/>

    <TextView
            android:id="@+id/ftNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/hzNum"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/fsNum"
            android:text="发帖数"
            android:textSize="12sp"
            android:textColor="@color/color_D6D6D6"/>

    <TextView
            android:id="@+id/fsNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/photo"
            app:layout_constraintRight_toLeftOf="@+id/gzNumText"
            app:layout_constraintTop_toBottomOf="@+id/fsNum"
            android:text="45665"
            android:textSize="18sp"
            android:textColor="@color/color_555555"/>

    <TextView
            android:id="@+id/gzNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/fsNumText"
            app:layout_constraintRight_toLeftOf="@+id/hzNumText"
            app:layout_constraintBottom_toBottomOf="@+id/fsNumText"
            android:text="545"
            android:textSize="18sp"
            android:textColor="@color/color_555555"/>

    <TextView
            android:id="@+id/hzNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/gzNumText"
            app:layout_constraintRight_toLeftOf="@+id/ftNumText"
            app:layout_constraintBottom_toBottomOf="@+id/fsNumText"
            android:text="6546"
            android:textSize="18sp"
            android:textColor="@color/color_555555"/>

    <TextView
            android:id="@+id/ftNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/hzNumText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/fsNumText"
            android:text="3254"
            android:textSize="18sp"
            android:textColor="@color/color_555555"/>


</android.support.constraint.ConstraintLayout>