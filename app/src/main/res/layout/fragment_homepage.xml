<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:background="@android:color/white"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="8dp"
            android:paddingEnd="15dp"
            android:paddingBottom="8dp">

        <TextView
                android:id="@+id/addrText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/location"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="武汉市"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:background="@drawable/rect_round_bg5"
                android:gravity="end|center_vertical"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="总在线人数"
                    android:textColor="@color/color_FF9D00"
                    android:textSize="12sp" />

            <TextView
                    android:id="@+id/sumNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="65536"
                    android:textStyle="bold"
                    android:textColor="@color/color_FF9D00"
                    android:textSize="12sp" />

            <TextView
                    android:id="@+id/areaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="/本地区在线人数"
                    android:textColor="@color/color_FF9D00"
                    android:textSize="12sp" />

            <TextView
                    android:id="@+id/localNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="65536"
                    android:textStyle="bold"
                    android:textColor="@color/color_FF9D00"
                    android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/bg_homepage_f0_to_ff" />

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

        <android.support.v7.widget.CardView
                android:id="@+id/layout_banner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintDimensionRatio="343:150"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <TextView
                android:id="@+id/menuBtn1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:drawableTop="@mipmap/menu1"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="装饰品牌"
                android:layout_marginTop="27dp"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="@id/layout_banner"
                app:layout_constraintRight_toLeftOf="@id/menuBtn2"
                app:layout_constraintTop_toBottomOf="@id/layout_banner" />

        <TextView
                android:id="@+id/menuBtn2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:drawableTop="@mipmap/menu2"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="建材家具"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                app:layout_constraintLeft_toRightOf="@id/menuBtn1"
                app:layout_constraintRight_toLeftOf="@id/menuBtn3"
                app:layout_constraintTop_toTopOf="@id/menuBtn1" />

        <TextView
                android:id="@+id/menuBtn3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:drawableTop="@mipmap/menu3"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="视频"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                app:layout_constraintLeft_toRightOf="@id/menuBtn2"
                app:layout_constraintRight_toLeftOf="@id/menuBtn4"
                app:layout_constraintTop_toTopOf="@id/menuBtn1" />

        <TextView
                android:id="@+id/menuBtn4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:drawableTop="@mipmap/menu4"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="直播"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                app:layout_constraintLeft_toRightOf="@id/menuBtn3"
                app:layout_constraintRight_toRightOf="@id/layout_banner"
                app:layout_constraintTop_toTopOf="@id/menuBtn1" />

        <TextView
                android:id="@+id/menuBtn5"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:drawableTop="@mipmap/menu5"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="资讯"
                android:layout_marginTop="27dp"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="@id/menuBtn1"
                app:layout_constraintRight_toLeftOf="@id/menuBtn6"
                app:layout_constraintTop_toBottomOf="@id/menuBtn1" />

        <TextView
                android:id="@+id/menuBtn6"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:drawableTop="@mipmap/menu6"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="案例"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                app:layout_constraintLeft_toRightOf="@id/menuBtn5"
                app:layout_constraintRight_toLeftOf="@id/menuBtn7"
                app:layout_constraintTop_toTopOf="@id/menuBtn5" />

        <TextView
                android:id="@+id/menuBtn7"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:drawableTop="@mipmap/menu7"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="设计师"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                app:layout_constraintLeft_toRightOf="@id/menuBtn6"
                app:layout_constraintRight_toLeftOf="@id/menuBtn8"
                app:layout_constraintTop_toTopOf="@id/menuBtn5" />

        <TextView
                android:id="@+id/menuBtn8"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:drawableTop="@mipmap/menu8"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="特卖"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                app:layout_constraintLeft_toRightOf="@id/menuBtn7"
                app:layout_constraintRight_toRightOf="@id/layout_banner"
                app:layout_constraintTop_toTopOf="@id/menuBtn5" />
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_F4F4F4"
            android:gravity="center"
            android:padding="16dp"
            android:text="推荐品牌"
            android:layout_marginTop="30dp"
            android:textColor="@color/color_CCA07B"
            android:textSize="21sp" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

        <com.android.shuizu.myutillibrary.widget.EmptyRecyclerView
                android:id="@+id/homepageList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <include
                layout="@layout/layout_list_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>