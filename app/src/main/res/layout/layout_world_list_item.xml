<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo"
            android:layout_width="30dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintDimensionRatio="1:1"/>

    <TextView
            android:id="@+id/accountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_88000000"
            app:layout_constraintLeft_toRightOf="@id/photo"
            app:layout_constraintTop_toTopOf="@id/photo"
            android:layout_marginStart="5dp"
            android:text="侯玉凯"/>

    <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_D6D6D6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="5dp"
            android:text="08/12 14:11"/>

    <TextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_555555"
            app:layout_constraintLeft_toLeftOf="@id/accountTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/accountTitle"
            android:text="侯玉凯放大师傅第三方水电费但是多斯拉克机房到时空裂缝水电费但是生的范德萨发生的发生的"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/images"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/accountTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            app:layout_constraintLeft_toLeftOf="@id/accountTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/images">

        <TextView
                android:id="@+id/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_CCCCCC"
                android:drawableStart="@mipmap/icon_z_gray"
                android:drawablePadding="2dp"
                android:textSize="12sp"
                android:text="12"/>

        <TextView
                android:id="@+id/gz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_CCCCCC"
                android:layout_marginStart="10dp"
                android:drawableStart="@mipmap/icon_heart"
                android:drawablePadding="2dp"
                android:textSize="12sp"
                android:text="12"/>

        <TextView
                android:id="@+id/pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_CCCCCC"
                android:drawableStart="@mipmap/icon_pl"
                android:drawablePadding="2dp"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:text="5"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>