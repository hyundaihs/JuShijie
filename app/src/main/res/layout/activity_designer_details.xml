<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintDimensionRatio="3:2"
                    android:contentDescription="@null"/>

            <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@mipmap/icon_fx"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/zan"
                    android:background="@drawable/circle_bg_11"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@null"/>

            <ImageView
                    android:id="@+id/zan"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@mipmap/icon_z"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/guanzhu"
                    android:background="@drawable/circle_bg_11"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@null"/>

            <ImageView
                    android:id="@+id/guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@mipmap/icon_gz"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintBottom_toBottomOf="@+id/image"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/circle_bg_11"
                    android:contentDescription="@null"/>

            <ImageView
                    android:id="@+id/photo"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/image"
                    android:src="@mipmap/ic_launcher"
                    android:layout_margin="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintDimensionRatio="1:1"/>

            <TextView
                    android:id="@+id/companyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/photo"
                    app:layout_constraintTop_toTopOf="@id/photo"
                    android:layout_marginStart="10dp"
                    android:text="黄河"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/subTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/photo"
                    app:layout_constraintTop_toBottomOf="@+id/companyTitle"
                    android:layout_marginStart="10dp"
                    android:text="反倒是开发单身快乐"
                    android:textSize="14sp"
                    android:textColor="@color/color_CCCCCC"/>


            <TextView
                    android:id="@+id/tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/photo"
                    android:background="@drawable/rect_radius_bold_bg_9"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:text="反倒是开发单身快乐"
                    android:textSize="14sp"
                    android:textColor="@color/color_CCCCCC"/>

            <TextView
                    android:id="@+id/exTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tags"
                    android:text="经验："
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/ex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/exTitle"
                    app:layout_constraintTop_toBottomOf="@id/tags"
                    android:text="10年"
                    android:textSize="14sp"
                    android:textColor="@color/color_CCCCCC"/>


            <TextView
                    android:id="@+id/priceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/price"
                    android:text="收费："
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/exTitle"
                    app:layout_constraintLeft_toRightOf="@id/priceTitle"
                    android:layout_marginTop="6dp"
                    android:textSize="16sp"
                    android:text="￥589.25元/天"
                    android:textColor="@color/color_orange"/>

            <TextView
                    android:id="@+id/pingLunTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/price"
                    android:drawableStart="@drawable/rect_v"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:padding="10dp"
                    android:background="@color/color_F0F0F0"
                    android:text="相关案例"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/pingLunTitle">

                <com.android.shuizu.myutillibrary.widget.EmptyRecyclerView
                        android:id="@+id/caseList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"/>

                <include
                        layout="@layout/layout_list_empty"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</LinearLayout>