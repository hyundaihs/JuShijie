<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">

            <TextView
                    android:id="@+id/chooseAddress"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableEnd="@mipmap/down"
                    android:layout_height="wrap_content"
                    android:text="区域"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/chooseMerchant"
                    android:layout_width="wrap_content"
                    android:drawableEnd="@mipmap/down"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="商家类型"/>
        </LinearLayout>
    </LinearLayout>

    <com.android.shuizu.myutillibrary.widget.SwipeRefreshAndLoadLayout
            android:id="@+id/livePageSwipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_3">

        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/livePageListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
        </android.support.v4.widget.NestedScrollView>
    </com.android.shuizu.myutillibrary.widget.SwipeRefreshAndLoadLayout>

</LinearLayout>