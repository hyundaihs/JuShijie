<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/companyShowBg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@mipmap/center_bg"
                android:scaleType="fitXY"
                android:contentDescription="@null"/>

        <RelativeLayout
                android:id="@+id/layoutTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@+id/companyShowBg"
                android:padding="5dp">

            <ImageView
                    android:id="@+id/companyBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_back"
                    android:contentDescription="@null"/>

            <TextView
                    android:id="@+id/companyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蒙牛"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/yuYue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/rect_round_bg_7"/>
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutTop"
                app:layout_constraintBottom_toTopOf="@+id/layoutBottom">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/companyPhoto"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:contentDescription="@null"/>

            <TextView
                    android:id="@+id/companyPPName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/companyPhoto"
                    app:layout_constraintLeft_toRightOf="@+id/companyPhoto"
                    app:layout_constraintBottom_toTopOf="@+id/companyMsg"
                    android:layout_marginStart="5dp"
                    android:text="新农牛肉面"/>

            <TextView
                    android:id="@+id/companyMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/rect_bg7_round_white_bold"
                    app:layout_constraintTop_toBottomOf="@+id/companyPPName"
                    app:layout_constraintBottom_toBottomOf="@+id/companyPhoto"
                    app:layout_constraintLeft_toLeftOf="@+id/companyPPName"
                    android:text="私信"/>

            <TextView
                    android:id="@+id/companyShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/rect_bg7_round_white_bold"
                    app:layout_constraintLeft_toRightOf="@+id/companyMsg"
                    app:layout_constraintTop_toTopOf="@+id/companyMsg"
                    app:layout_constraintBottom_toBottomOf="@+id/companyMsg"
                    android:text="分享"/>

            <TextView
                    android:id="@+id/companyGz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/rect_bg7_round_white_bold"
                    app:layout_constraintTop_toTopOf="@+id/companyMsg"
                    app:layout_constraintBottom_toBottomOf="@+id/companyMsg"
                    app:layout_constraintLeft_toRightOf="@id/companyShare"
                    android:text="关注"/>

            <TextView
                    android:id="@+id/companyWatchShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/rect_round_bg_12"
                    app:layout_constraintTop_toTopOf="@+id/companyMsg"
                    app:layout_constraintBottom_toBottomOf="@+id/companyMsg"
                    app:layout_constraintLeft_toRightOf="@id/companyGz"
                    android:text="看直播"/>

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
                android:id="@+id/layoutBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_6"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="关注数"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/white"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="获赞数"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/white"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="发帖数"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/gz_nums"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>

                <TextView
                        android:id="@+id/hz_nums"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>

                <TextView
                        android:id="@+id/ft_nums"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bg_4"
            android:orientation="horizontal">

        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司简介"
                    android:button="@null"
                    android:padding="10dp"
                    android:drawableStart="@drawable/rect_v_checked"
                    android:background="@drawable/bg_checked"
                    android:textColor="@drawable/color_checked"/>

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌荣誉"
                    android:button="@null"
                    android:padding="10dp"
                    android:drawableStart="@drawable/rect_v_checked"
                    android:background="@drawable/bg_checked"
                    android:textColor="@drawable/color_checked"/>

            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="案例"
                    android:button="@null"
                    android:padding="10dp"
                    android:drawableStart="@drawable/rect_v_checked"
                    android:background="@drawable/bg_checked"
                    android:textColor="@drawable/color_checked"/>

            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="视频"
                    android:button="@null"
                    android:padding="10dp"
                    android:drawableStart="@drawable/rect_v_checked"
                    android:background="@drawable/bg_checked"
                    android:textColor="@drawable/color_checked"/>

            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="资讯"
                    android:button="@null"
                    android:padding="10dp"
                    android:drawableStart="@drawable/rect_v_checked"
                    android:background="@drawable/bg_checked"
                    android:textColor="@drawable/color_checked"/>

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设计团队"
                    android:button="@null"
                    android:padding="10dp"
                    android:drawableStart="@drawable/rect_v_checked"
                    android:background="@drawable/bg_checked"
                    android:textColor="@drawable/color_checked"/>

            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="特卖"
                    android:button="@null"
                    android:padding="10dp"
                    android:drawableStart="@drawable/rect_v_checked"
                    android:background="@drawable/bg_checked"
                    android:textColor="@drawable/color_checked"/>
        </RadioGroup>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">

        </LinearLayout>


    </LinearLayout>

</LinearLayout>